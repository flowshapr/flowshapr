{
  "name": "flowshapr-server",
  "version": "1.0.0",
  "description": "Flowshapr backend server with authentication and organization management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "restart": "./scripts/restart-all.sh",
    "clean": "./scripts/clean-all.sh",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --project tsconfig.test.json"
  },
  "keywords": [
    "flowshapr",
    "genkit",
    "authentication",
    "express"
  ],
  "author": "Flowshapr Team",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@genkit-ai/compat-oai": "^1.18.0",
    "@genkit-ai/dotprompt": "^1.0.0-rc.5",
    "@genkit-ai/googleai": "^1.18.0",
    "@genkit-ai/mcp": "^1.18.0",
    "@types/dockerode": "^3.3.43",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.3.7",
    "cors": "^2.8.5",
    "dockerode": "^4.0.7",
    "dotenv": "^16.4.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.36.3",
    "express": "^4.18.0",
    "express-rate-limit": "^7.0.0",
    "genkit": "^1.18.0",
    "genkitx-anthropic": "^0.23.1",
    "helmet": "^7.0.0",
    "pg": "^8.11.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "jest-mock-extended": "^4.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
